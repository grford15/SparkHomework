<p class="pageHeader">Edit Manager</p>

<form action="/managers/$manager.getId()/edit" method="post">

    <label for="firstName">First Name:</label>
    <input class="inputBox" type="text" name="firstName" required="true" id="firstName" value="$manager.getFirstName"/>

    <label for="lastName">Last Name:</label>
    <input class="inputBox" type="text" name="lastName" required="true" id="lastName" value="$manager.getLastName"/>

    <label for="salary">Salary(Â£):</label>
    <input class="inputBox" type="number" name="salary" required="true" id="salary" value="$"/>

    <label for="budget">Budget:</label>
    <input class="inputBox" type="number" name="budget" required="true" id="budget"/>
    <label for="department">Department:</label>
    <select name="department" id="department">Department:
        #foreach($department in $departments)
        <option value="$department.getId()">$department.getTitle()</option>
        #end
    </select>
    <input type="submit" value="save" class="button"/>

</form>